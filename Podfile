project 'boilerplate-ios.xcodeproj'

# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'boilerplate-ios' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for boilerplate
  #Simple HTTP Requests
  pod 'Alamofire', '~> 4.3'
  #Asynchronous Promises
  pod 'PromiseKit', '~> 4.0'
  #Data Backend
  pod 'Firebase/Core'
  pod 'Firebase/Database'
  pod 'Firebase/Firestore'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  #Payments Backend
  pod 'Stripe', '~> 11.0'
  #Maps SDK
  pod 'GoogleMaps', '~> 2.5'
  
  target 'boilerplate-iosTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'boilerplate-iosUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
